<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_digizilla_tree" model="ir.ui.view">
        <field name="name">digizilla.digizilla.tree</field>
        <field name="model">digizilla.digizilla</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="country_id"/>
                <field name="joining_date"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

   <!-- Form View -->
   <record id="view_digizilla_form" model="ir.ui.view">
    <field name="name">digizilla.digizilla.form</field>
    <field name="model">digizilla.digizilla</field>
    <field name="arch" type="xml">
        <form js_class="digizilla_form">
            <sheet>
                <notebook>
                    <page string="Main" name="main">
                        <group col="2" colspan="2">
                            <group string="Personal Information" col="2">
                                <field name="name" class="o_inline_label" style="width: 100%;"/>
                                <field name="gender" class="o_inline_label" style="width: 100%;"/>
                                <field name="country_id" class="o_inline_label" style="width: 100%;"/>
                                <field name="joining_date" class="o_inline_label" style="width: 100%;"/>
                            </group>
                            <group string="Business Information" col="2">
                                <field name="company_id" class="o_inline_label" style="width: 100%;"/>
                                <field name="tag_ids" widget="many2many_tags"
                                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                                <field name="customer_ids" widget="many2many_tags"
                                       options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                    </page>
                    <page string="Notes" name="notes">
                        <field name="notes" nolabel="1"
                               placeholder="Enter notes here..."
                               style="width: 100%; min-height: 200px;"/>
                    </page>
                    <page string="Comments" name="comments">
                        <group>
                            <field name="comments" style="width: 100%;"/>
                        </group>
                    </page>
                </notebook>
            </sheet>

            <!-- Chatter -->
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
   </record>


    <!-- Kanban View -->
    <record id="view_digizilla_kanban" model="ir.ui.view">
        <field name="name">digizilla.digizilla.kanban</field>
        <field name="model">digizilla.digizilla</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="gender"/>
                <field name="country_id"/>
                <field name="company_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Gender: </strong>
                                        <field name="gender"/>
                                    </div>
                                    <div>
                                        <strong>Country: </strong>
                                        <field name="country_id"/>
                                    </div>
                                    <div>
                                        <strong>Company: </strong>
                                        <field name="company_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_digizilla" model="ir.actions.act_window">
        <field name="name">Digizilla Records</field>
        <field name="res_model">digizilla.digizilla</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Digizilla record
            </p>
        </field>
    </record>

</odoo>